@{
    Layout = null;
    var userName = "Anderson Fernando Domingos";
    var dataAtual = DateTime.Now.ToShortDateString();
    var horaAtual = DateTime.Now.ToLongTimeString();
    var ultimoAcesso = $"Último acesso: {dataAtual} {horaAtual}";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MarceTech</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <button class="menu-toggle" onclick="toggleSidebar()">☰</button>

    <div class="overlay" onclick="toggleSidebar()"></div>

    <aside class="sidebar">
        <div class="logo">
            <img src="~/img/logo.jpg" alt="MarceTech" />
        </div>

        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="has-submenu">
                    <a href="#">Cadastros</a>
                    <ul class="submenu">
                        <li><a asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                        <li><a asp-controller="Materiais" asp-action="Index">Materiais</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Orcamento" asp-action="Index">Orçamentos</a></li>
                <li><a asp-controller="Contrato" asp-action="Index">Contratos</a></li>
                <li class="has-submenu">
                    <a href="#">Gestão</a>
                    <ul class="submenu">
                        <li><a asp-controller="Comercial" asp-action="Index">Gestão Comercial</a></li>
                        <li><a asp-controller="Producao" asp-action="Index">Gestão de Produção</a></li>
                        <li><a asp-controller="Cronograma" asp-action="Index">Gestão de Cronograma</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Home" asp-action="Login">Sair</a></li>
            </ul>
        </nav>
    </aside>

    <div class="main">
        <header style="background-color:white;color:black">
            <div class="user-info">
                <div style="padding-left: calc(10% + 20px);">Bem-vindo, @userName. <p>@ultimoAcesso</p></div>
            </div>
        </header>

        <main class="content">
            <div id="modalExclusao" class="modal">
                <div class="modal-conteudo">
                    <span class="fechar" onclick="fecharModal();">&times;</span>
                    <h2>Tem certeza que deseja excluir esse registro?</h2>
                    <p>Essa ação não poderá ser desfeita.</p>
                    <div class="botoes">
                        <button id="btnSimExcluir" class="btn btn-success">Sim</button>
                        <button class="btn btn-danger" onclick="fecharModal();">Não</button>
                    </div>
                </div>
            </div>
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)

    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.querySelector('.overlay');
            sidebar.classList.toggle('active');
            if (sidebar.classList.contains('active')) {
                overlay.style.display = 'block';
                document.body.style.overflow = 'hidden';
            } else {
                overlay.style.display = 'none';
                document.body.style.overflow = '';
            }
        }

        document.querySelectorAll('.has-submenu > a').forEach(function (menuLink) {
            menuLink.addEventListener('click', function (e) {
                e.preventDefault();
                const submenu = this.nextElementSibling;
                submenu.style.display = submenu.style.display === 'block' ? 'none' : 'block';
            });
        });
    </script>

    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.6);
            animation: fadeIn 0.3s ease-in-out;
        }

        .modal-conteudo {
            background-color: #fff;
            margin: 10% auto;
            padding: 30px;
            width: 90%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            animation: slideDown 0.4s ease;
            position: relative;
            text-align: center;
        }

        .fechar {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
        }

        .botoes {
            margin-top: 20px;
        }

            .botoes button {
                padding: 10px 20px;
                margin: 0 10px;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

        .confirmar {
            background-color: #e53935;
            color: white;
        }

            .confirmar:hover {
                background-color: #c62828;
            }

        .cancelar {
            background-color: #ccc;
        }

            .cancelar:hover {
                background-color: #aaa;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes slideDown {
            from

        {
            transform: translateY(-30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }
    </style>
    <script>
        function fecharModal(){
            document.getElementById('modalExclusao').style.display = 'none';
        }
    </script>
</body>
</html>